<!DOCplaceholder="placeholder" type html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/signin.css">
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <title><%=title %></title>

    <script src="lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

<div class="login-box">
    <div class="login-box-content">
        <div class="login-logo">
            <a href="/">
                <img src="img/logo-white.png" alt="" style="height: 50px; width: auto;">
                拾货</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">
                用户注册
            </p>
            <% for(var i in messages) { %>
            <p class="flash"><%= messages[i] %></p>
            <% } %>
            <form action="/signup" id="loginForm" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="text" id="username" name="username" placeholder="用户名" maxlength="100" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="password" id="password" name="password" placeholder="密码" maxlength="100" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="password" id="passwordAgain" name="passwordAgain" placeholder="确认密码" maxlength="100" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-7 col-xs-7">
                        <input type="password" id="mobile" name="mobile" placeholder="手机号码" maxlength="11" class="form-control" required>
                    </div>
                    <div class="col-sm-5 col-xs-5">
                        <input id="getValid" type="button" value="获取验证码" class="btn btn-primary btn-block">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" value="注册" class="btn btn-primary btn-block">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4 text-left">
                        <a href="/signin">返回登录</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>